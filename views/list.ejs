<%- include("header") -%>

<body>
<div class="box" id="heading">
        <h1>
                <%=listTitle %>
        </h1>
</div>

<div class="box">
    <% newListItems.forEach(item => { %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" onchange="this.form.submit()" value="<%=item.id %>" name="checkbox">
                <p>
                    <%=item.name %>
                </p>
            <input type="hidden" name="listName" value="<%=listTitle%>">
        </div>
    </form>

    <% }); %>

    <form action="/" method="post" class="item">
        <input type="text" name="addItems" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>
</div>

<%- include("footer") -%>